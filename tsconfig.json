{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDirs": ["src", "./prisma"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["./src/types"]
